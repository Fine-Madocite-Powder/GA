<h1>Log in:</h1>
<form action="login" method="POST">
    Username:
    <input type="text" name="username">
    <br>
    {{#if errorMessage}}
    <div class="error">{{errorMessage}}</div>
    {{/if}}
    <br>
    Password: <input type="text" name="password">
    <br><br>
    <button type="submit">Submit</button>
</form>

